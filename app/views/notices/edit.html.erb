<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-11">
		<h2>お知らせ編集</h2>
		<%= form_with model: @notice do |f| %>
			<div class="row br50">
				<div class="col-xs-1">
					<%= f.label :introduction, "お知らせ内容" %>
				</div>
				<div class="col-xs-2">
					<%= f.text_field :introduction %>
				</div>
				<div class="col-xs-1">
					<%= f.submit "更新", class: "btn btn-success" %>
				</div>
			</div>
		<% end %>
	</div>
</div>