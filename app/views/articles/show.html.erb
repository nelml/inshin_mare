<div class="row">
	<div class="col-xs-5">
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-10">
				<!-- ここにお気に入りやプロフィール等 -->
				<% if @user.present? %>
					<div class="row">
						<p>
							この記事を書いた人のプロフィール
						</p>
					</div>
					<div class="row">
						<p><%= @user.name %></p>
					</div>
					<div class="row">
						<div class="col-xs-5">
						<% if @user.image_id.present? %>
							<%= attachment_image_tag @user, :image, :fill, 100, 100, format: "jpg" %>
						<% end %>
						</div>
						<% if @user.introduction.present? %>
							<div class="col-xs-7 word_return">
								<%= @user.introduction %>
							</div>
						<% else %>
							<div class="col-xs-7">
							</div>
						<% end %>
					</div>
				<% else %>
					<div class="row header_line_height">
						匿名のユーザー投稿
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-xs-7">
		<div class="row">
			<h1><%= @article.title %></h1>
			<p><span class="glyphicon glyphicon-tag" aria-hidden="true"></span><%=link_to @article.genre.name, genre_path(@article.genre.id) %></p>
		</div>
		<div class="row">
			<%= attachment_image_tag @article, :image, :fill, 200, 200, "jpg" %>
		</div>
		<div class="row">
			<%= @article.explain %>
		</div>
		<!-- ここからコメント -->
		<% if @comments.present? %>
			<div class="row">
				<h3>コメント一覧(<%= @comments.count %>件)</h3>
			</div>
			<div class="row">
				<% @comments.each do |comment, cid| %>
				<div class="row">
					<div class="col-xs-1">
						<p><b><%= cid + 1 %></b></p>
					</div>
					<div class="col-xs-2">
						<% if comment.image_id.present? %>
							<%= attachment_image_tag comment, :image, :fill, 40, 40, "jpg" %>
						<% else %>
						<% end %>
					</div>
					<div class="col-xs-6">
						<div class="row">
							<% if comment.name.present? %>
								<b><%= comment.name %></b>
							<% else %>
							<% end %>
						</div>
						<div class="row">
							<%= comment.explain %>
						</div>
					</div>
					<% if @article.user == current_user %>
						<div class="col-xs-2">
							<%= link_to "削除", comment_path, method: :delete, class: "btn btn-danger" %>
						</div>
					<% end %>
				</div>
				<% end %>
			</div>
		<% else %>
			<div class="row">
				<h2>コメントなし</h2>
			</div>
		<% end %>
		<div class="row">
			<div class="row">
				<h3>新規コメントフォーム</h3>
			</div>
			<%= form_with model: @comment, url: { controller: "comments", action: "create"} do |f| %>
				<div class="row">
					<div class="col-xs-2">
						<%= f.label :name, "名前orタイトル" %>
					</div>
					<div class="col-xs-3">
						<%= f.text_field :name, default: "名無し" %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-2">
						<%= f.label :image, "画像(あれば)" %>
					</div>
					<div class="col-xs-3">
						<%= f.attachment_field :image %>
					</div>
				</div>
				<div class="row br20">
					<div class="col-xs-2">
						<%= f.label :explain, "コメント本文" %>
					</div>
					<div class="col-xs-3">
						<%= f.text_area :explain %>
					</div>
				</div>
				<div class="row br20">
					<% if user_signed_in? %>
						<%= f.hidden_field :user_id, :value => current_user.id %>
					<% end %>
					<%= f.hidden_field :article_id, :value => @article.id %>
					<%= f.submit "投稿", class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
