<h1>Articles#new</h1>
<p>Find me in app/views/articles/new.html.erb</p>
<%= form_with model: @article do |f| %>
<div class="row">
	<div class="col-xs-2">
		<%= f.label :title, "タイトル" %>
	</div>
	<div class="col-xs-4">
		<%= f.text_field :title %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<%= f.label :image, "画像(任意)" %>
	</div>
	<div class="col-xs-4">
		<%= f.attachment_field :image %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<%= f.label :genre_id, "ジャンル選択" %>

	</div>
	<div class="col-xs-4">
		<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "ジャンル選択" %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<%= f.label :explain, "本文" %>
	</div>
	<div class="col-xs-4">
		<%= f.text_area :explain %>
<div class="row">
	<%= f.submit "投稿", class: "btn btn-danger" %>
</div>
<% end %>