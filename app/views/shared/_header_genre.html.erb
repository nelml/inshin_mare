<header class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
      <div class="title_img"></div>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-3">
        <% if user_signed_in? %>
          <% if @favgenre.id.present? %>
            <%= link_to "★お気に入り中", favgenre_path(@favgenre.id), method: :delete, class: "btn btn-success" %>
          <% else %>
            <%= form_with model: @favgenre, url: { controller: "favgenres", action: "create"} do |f| %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :genre_id, :value => @genre.id %>
            <%= f.submit "☆お気に入りに登録", class: "btn btn-success" %>
            <% end %>
          <% end %>
        <% end %>

        </div>

        <div class="col-xs-3">
          コンテンツ２
        </div>

        <div class="col-xs-3">
          <%= link_to "マイページ", user_path(current_user) %>
        </div>

        <div class="col-xs-3">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </div>
      </div>
    </div>
  </div>
</header>