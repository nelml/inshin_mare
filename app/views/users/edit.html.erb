<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-11">
		<div class="row">
			<h3>プロフィール変更</h3>
		</div>
		<div class="row">
			<p class="color_red font12">※パスワードは、6文字以上で新しく設定するパスワードを入力するか、<b>変更しない場合は既存のパスワードを入力してください。</b></p>
		</div>
		<%= form_with model: @user do |f| %>
		<div class="row br50">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= f.label :name, "ユーザー名" %>
			</div>
			<div class="col-xs-2">
				<%= f.text_field :name, class: "col-xs-12" %>
			</div>
		</div>
		<div class="row br20">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= f.label :introduction, "自己紹介" %>
			</div>
			<div class="col-xs-4">
				<%= f.text_area :introduction, class: "col-xs-12", placeholder: "※任意" %>
			</div>
		</div>
		<div class="row br20">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= f.label :image, "プロフィール画像" %>
			</div>
			<div class="col-xs-4">
				<%= f.attachment_field :image %>
			</div>
		</div>
		<div class="row br20">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= f.label :password, "パスワード" %><span class="color_red font12">※</span>

			</div>
			<div class="col-xs-9">
				<%= f.text_field :password %>
			</div>
		</div>
		<div class="row br20">
			<div class="col-xs-1"></div>
			<div class="col-xs-2">
				<%= f.label :password_confirmation, "パスワード確認" %><span class="color_red font12">※</span>
			</div>
			<div class="col-xs-4">
				<%= f.text_field :password_confirmation %>
			</div>
		</div>
		<div class="row br20">
			<div class="col-xs-3"></div>
			<div class="col-xs-4">
				<%= f.submit "変更", class: "btn btn-success" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
