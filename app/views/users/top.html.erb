<div class="row top_image">
	<div class="find_shyumi">
		<P><%= link_to "シュミを探す", genres_path %></P>
	</div>
	<div class="notice">
		<p><%= link_to "お知らせ", notices_path %></p>
	</div>
	<div class="toiawase">
		<p><%= link_to "お問い合わせ", new_contact_path %></p>
	</div>
	<div class="twitter">
		<p>Twitter</p>
	</div>
</div>
<div class="row top_side_bar">
	<div class="col-xs-3">
		<div class="row top_left_about">
			<%= link_to "このサイトについて", about_top_path, class: "left_about_word" %></p>
		</div>
		<div class="row top_left_top5">
			<div class="col-xs-1">
			</div>
			<p class="font16"><b>シュミいいねランキング</b></p>
			<div class="col-xs-1">
			</div>
			<div class="col-xs-2">
				<div class="row">
					<p><b>順位</b></p>
				</div>
				<% for num in 1...6 do %>
				<div class="row left_pad left_rank">
					<%= num %>
				</div>
				<% num.succ %>
				<% end %>
			</div>
			<div class="col-xs-8">
			<div class="row">
				<p><b>シュミ名</b></p>
			</div>
			<% @genres_rank.each do |genre| %>
			<div class="row left_rank">
				<div class="col-xs-9">
					<%=link_to genre.name, genre_path(genre.id) %>
				</div>
				<div class="col-xs-3">
					<p><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>  <%= genre.favgenres.all.count %></p>
				</div>
			</div>
			<% end %>
			</div>
		</div>
		<div class="row top_left_genre">
			<table class="table">
				<tr>
					<th class="col-xs-12">ランダムシュミ一覧</th>
				</tr>
				<% @genres_random.each do |genre| %>
					<tr>
						<td class="col-xs-12"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span>　<%=link_to genre.name, genre_path(genre.id) %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>

	<div class="col-xs-6 top_main">
		<div classs="row main_genre_map">
			<p>ジャンルマップ</p>
		</div>
		<div class="row current_article_title">
		</div>
		<div class="row current_article_box">
			<div class="col-xs-5">1</div>
			<div class="col-xs-5">2</div>
			<div class="col-xs-5">3</div>
			<div class="col-xs-5">4</div>
		</div>
	</div>

	<div class="col-xs-3">

	</div>

</div>